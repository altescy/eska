{
  "name": "eska",
  "productName": "Eska",
  "version": "0.0.1",
  "description": "A modern Elasticsearch client built with Electron",
  "author": "altescy",
  "license": "MIT",
  "homepage": "https://github.com/altescy/eska#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/altescy/eska.git"
  },
  "bugs": {
    "url": "https://github.com/altescy/eska/issues"
  },
  "keywords": [
    "elasticsearch",
    "electron",
    "client",
    "gui",
    "desktop-app"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "setup-electron": "cd node_modules/electron && node install.js",
    "dev": "vite",
    "lint": "biome check && tsc --noEmit",
    "format": "biome check --fix",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource-variable/fira-code": "^5.2.7",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "jotai": "^2.13.1",
    "json5": "^2.2.3",
    "lucide-react": "^0.542.0",
    "minimatch": "^10.0.3",
    "monaco-editor": "^0.54.0",
    "monaco-vim": "^0.4.2",
    "monaco-yaml": "^5.4.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^3.0.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^24.7.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.4.20",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "main": "dist-electron/main.js",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
